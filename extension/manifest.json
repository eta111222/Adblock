{
    "manifest_version": 3,
    "name": "AdBlock Plus",
    "version": "1.0",
    "description": "Mark websites as ad sites to block them.",
    "permissions": [
      "declarativeNetRequest",
      "declarativeNetRequestWithHostAccess",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "background": {
      "service_worker": "scripts/background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icons-100.png"
    },
    "icons": {
      "16": "icons/icons-16.png",
      "48": "icons/icons-48.png",
      "100": "icons/icons-100.png"
    }
  }
  